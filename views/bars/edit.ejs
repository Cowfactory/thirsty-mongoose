<!-- views/bars/edit.ejs -->
<%- include ../partials/header.ejs %>
<main>
    <h2>Edit Bar Details</h2>
    <p><%= bar.name %></p>
    <p><%= bar.location %></p>
    <form method="POST" action="/bars/<%= bar._id %>?_method=PUT" autocomplete="off">
        <input type="text" name="name" placeholder="Bar name">
        <input type="text" name="location" placeholder="Bar style">
        <br><br>
        <input type="submit" value="Submit">
    </form>
</main>

<%- include ../partials/footer.ejs %>