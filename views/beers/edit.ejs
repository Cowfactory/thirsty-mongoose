<!-- views/beers/edit.ejs -->
<%- include ../partials/header.ejs %>
<main>
    <h2>Edit Beer Details</h2>
    <p><%= beer.name %></p>
    <p><%= beer.style %></p>
    <form method="POST" action="/beers/<%= beer._id %>?_method=PUT" autocomplete="off">
        <input type="text" name="name" placeholder="Beer name">
        <input type="text" name="style" placeholder="Beer style">
        <br><br>
        <input type="submit" value="Submit">
    </form>
</main>

<%- include ../partials/footer.ejs %>